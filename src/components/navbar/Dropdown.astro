---
interface Props {
    name: string;
}

const { name } = Astro.props;
---

<li class="w-full lg:w-auto" data-dropdown>
    <p
        class="flex w-full cursor-pointer items-center justify-center bg-blue-900 py-4 text-white transition-colors ease-in-out hover:bg-blue-950 hover:backdrop-brightness-75 lg:h-auto lg:w-auto lg:px-6 lg:py-8"
    >
        {name}
        <svg
            class="ml-1 h-4 w-4 transition-transform duration-100 ease-in-out"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
                fill-rule="evenodd"
                d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
        </svg>
    </p>

    <ul class="hidden h-auto min-h-8 w-auto flex-col flex-wrap rounded-lg bg-blue-900 hover:bg-blue-950 lg:absolute">
        <slot />
    </ul>
</li>
